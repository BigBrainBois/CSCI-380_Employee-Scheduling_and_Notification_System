<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity">

    <LinearLayout
        android:id="@+id/dashLLayout"
        android:layout_width="match_parent"
        android:layout_height="737dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/dashRLayout"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:background="@drawable/background"
            android:paddingTop="30dp"
            >

            <TextView
                android:id="@+id/dashText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:text="@string/my_dashboard"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="55dp"
                android:text="@string/user123"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/loginicon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="325dp"
                android:layout_marginLeft="325dp"
                android:layout_marginTop="25dp"
                android:contentDescription="@string/icon"
                app:srcCompat="@drawable/manager_icon" />
        </RelativeLayout>

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:columnCount="2"
            app:rowCount="2">


            <!--View Schedule Card-->
            <ImageView
                android:id="@+id/scheduleIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="45dp"
                android:contentDescription="@string/icon"
                app:srcCompat="@drawable/scheduleview" />


            <!--Requests Card THIS WILL BE A FRAGMENT-->
            <ImageView
                android:id="@+id/requestIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="45dp"
                android:contentDescription="@string/icon"
                app:srcCompat="@drawable/request" />

            <!--Notification Card-->
            <ImageView
                android:id="@+id/notificationIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="45dp"
                android:contentDescription="@string/icon"
                app:srcCompat="@drawable/notification" />


        </androidx.gridlayout.widget.GridLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>