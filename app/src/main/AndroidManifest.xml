<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nyit.employee_scheduler">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/skedulr"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/skedulr_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".ViewRequest"></activity>
        <activity android:name=".ViewBreakdown" />
        <activity android:name=".ManagerDashboardActivity" />
        <activity android:name=".ManagerLoginActivity" />
        <activity android:name=".SwitchSchedule" />
        <activity android:name=".DaysOffRequest" />
        <activity android:name=".ChangeAvailability"/>
        <activity android:name=".RequestsActivity" />
        <activity android:name=".NotificationActivity" />
        <activity android:name=".ViewSchedule" />
        <activity android:name=".DashboardActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".CreateSchedule"/>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>